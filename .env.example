# ===========================================
# CONFIGURATION FRONTEND - DAMES
# ===========================================
# Copier ce fichier vers .env.local pour le développement
# ou .env.production pour la production

# === API BACKEND ===
VITE_API_URL=http://localhost:3001
# En production: VITE_API_URL=https://api.tccdames.com

# === STRIPE (Paiements) ===
# Clé publique Stripe (commence par pk_test_ ou pk_live_)
VITE_STRIPE_PUBLIC_KEY=pk_test_VOTRE_CLE_PUBLIQUE_ICI

# === ADMOB (Publicités) ===
# IDs des pubs Android (laisser vide pour utiliser les IDs de test)
VITE_ADMOB_ANDROID_BANNER=
VITE_ADMOB_ANDROID_INTERSTITIAL=
VITE_ADMOB_ANDROID_REWARDED=

# IDs des pubs iOS (laisser vide pour utiliser les IDs de test)
VITE_ADMOB_IOS_BANNER=
VITE_ADMOB_IOS_INTERSTITIAL=
VITE_ADMOB_IOS_REWARDED=

# === FIREBASE (Notifications) ===
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# === FEATURES FLAGS ===
VITE_ENABLE_MULTIPLAYER=true
VITE_ENABLE_TOURNAMENTS=true
VITE_ENABLE_BATTLE_PASS=true
VITE_ENABLE_ADS=true
